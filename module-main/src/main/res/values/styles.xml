<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="bottom_tab_title_active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/sp14</item>
    </style>

    <style name="bottom_tab_title_inactive" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/sp12</item>
    </style>

</resources>
